<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <arg name="use_gui" default="true" description="Launch visualization for both vessels"/>

  <set_param name="use_sim_time" value="true"/>

  <node pkg="cybership_simulator" exec="voyager.py" name="voyager_simulation" namespace="voyager">
    <param from="$(find-pkg-share cybership_simulator)/config/multi_vessel_simulation.yaml"/>
  </node>

  <node pkg="cybership_simulator" exec="drillship.py" name="drillship_simulation" namespace="drillship">
    <param from="$(find-pkg-share cybership_simulator)/config/multi_vessel_simulation.yaml"/>
  </node>

  <group if="$(var use_gui)">
    <include file="$(find-pkg-share cybership_viz)/launch/multi.launch.py"/>
  </group>

  <include file="$(find-pkg-share cybership_description)/launch/description.launch.py">
    <arg name="vessel_model" value="voyager"/>
    <arg name="vessel_name" value="voyager"/>
  </include>

  <include file="$(find-pkg-share cybership_description)/launch/description.launch.py">
    <arg name="vessel_model" value="drillship"/>
    <arg name="vessel_name" value="drillship"/>
  </include>
</launch>
