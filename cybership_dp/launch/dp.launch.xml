<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <!-- Declare launch arguments -->
  <arg name="vessel_name"/>
  <arg name="vessel_model"/>

  <!-- Include thrust allocation launch file -->
  <include file="$(find-pkg-share cybership_dp)/launch/thrust_allocation.launch.xml">
    <arg name="vessel_name" value="$(var vessel_name)"/>
    <arg name="vessel_model" value="$(var vessel_model)"/>
  </include>

  <!-- Include position controller launch file -->
  <include file="$(find-pkg-share cybership_dp)/launch/position_controller.launch.xml">
    <arg name="vessel_name" value="$(var vessel_name)"/>
    <arg name="vessel_model" value="$(var vessel_model)"/>
  </include>

  <!-- Include velocity controller launch file -->
  <include file="$(find-pkg-share cybership_dp)/launch/velocity_controller.launch.xml">
    <arg name="vessel_name" value="$(var vessel_name)"/>
    <arg name="vessel_model" value="$(var vessel_model)"/>
  </include>


</launch>
